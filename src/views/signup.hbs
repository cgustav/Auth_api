<div class="row">
    <div class="col-md-6 mx-auto mt-3">
        <div class="card mt-5 text-center">
            <div class="card-header">
                <h1 class="h4 text-oranged">
                    Account Registry
                </h1>
            </div>
            <div class="card-body">
                <form action="/signup" method="POST">
                    <div class="form-group">
                        <label for="iName" class="control-label">Complete name</label>
                        <input id="iName" type="text" class="form-control" name="name" placeholder="e.g George Lukas" />

                    </div>
                    <div class="form-group">
                        <label for="iBirth" class="control-label">BirthDay</label>
                        <input id="iBirth" type="date" class="form-control" name="birthday" />
                    </div>
                    <div class="form-group">
                        <label for="iName" class="control-label">Your Gender</label>
                        <select id="iGender" name="gender" class="form-control" aria-placeholder="Your BirthDay">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="iEmail" class="control-label">Your Email</label>
                        <input id="iEmail" type="email" class="form-control" name="email" placeholder="email@example.com"/>
                    </div>
                    <div class="form-group">
                        <label for="iPassword" class="control-label">Your Password</label>
                        <input id="iPassword" type="password" class="form-control" name="password" placeholder="A good password!"/>
                    </div>
                    <div class="form-group">
                        <label for="iPasswordConfirm" class="control-label">Confirm Your Password</label>
                        <input id="iPasswordConfirm" type="password" class="form-control" name="repassword" placeholder="Good password again"/>
                    </div>
                    <button class="btn btn-orangized btn-block mt-5">
                        Signup
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>